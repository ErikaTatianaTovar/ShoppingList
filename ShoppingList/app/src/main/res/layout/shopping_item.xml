<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="position"
            type="Integer" />

        <variable
            name="shoppingHomeViewModel"
            type="com.example.shoppinglist.application.home.viewmodel.ShoppingHomeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".application.home.view.ShoppingHomeFragment">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/text_box_product"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLength="15"
            android:hint="@string/product"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/text_box_unit_price"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/text_box_unit_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:digits="0123456789.,"
            android:inputType="numberDecimal"
            android:maxLength="10"
            android:hint="@string/value"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/text_box_quantity"
            app:layout_constraintStart_toEndOf="@+id/text_box_product"
            />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/text_box_quantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:digits="0123456789.,"
            android:inputType="numberDecimal"
            android:maxLength="10"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:hint="@string/quantity"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/text_box_total_per_product"
            app:layout_constraintStart_toEndOf="@+id/text_box_unit_price" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_box_total_per_product"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:digits="0123456789.,"
            android:hint="@string/value"
            android:inputType="numberDecimal"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/text_box_quantity"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>